                    const div = document.createElement('div');
                    div.className = 'location';

                    const lugarTexto = document.createElement('h3');
                    lugarTexto.textContent = lugar.nombre;

                    const lugarImagen = document.createElement('img');
                    lugarImagen.src = lugar.imagen;
                    lugarImagen.alt = lugar.nombre;

                    const lugarDescripcion = document.createElement('p');
                    lugarDescripcion.textContent = lugar.descripcion;
                    lugarDescripcion.className = 'descripcion';

                    div.appendChild(lugarTexto);
                    div.appendChild(lugarImagen);
                    div.appendChild(lugarDescripcion);
                    contenido.appendChild(div);
